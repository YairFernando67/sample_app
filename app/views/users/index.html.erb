<% provide(:title, 'All Users') %>
<h1>Users</h1>

<% if logged_in? %>
  <%= link_to 'New User', signup_path %>
<% end %>
<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size:50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>
<%= will_paginate %>

